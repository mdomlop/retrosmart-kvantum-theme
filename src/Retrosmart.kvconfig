vertical_spin_indicators=true
left_tabs=true
scrollable_menu=true
submenu_overlap=0
menu_shadow_depth=7
scroll_width=12
slider_width=4
#transient_scrollbar=true
joined_inactive_tabs=false
attach_active_tab=true
